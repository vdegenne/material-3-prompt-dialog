{
	"name": "material-3-prompt-dialog",
	"type": "module",
	"version": "1.0.4",
	"description": "MWC 3 prompt dialog utility helpers",
	"license": "MIT",
	"exports": {
		".": {
			"default": "./lib/dialog2.js.js",
			"types": "./lib/dialog.d.ts"
		},
		"./dialog.js": {
			"default": "./lib/dialog2.js",
			"types": "./lib/dialog2.d.ts"
		},
		"./prompt.js": {
			"default": "./lib/prompt.js",
			"types": "./lib/prompt.d.ts"
		},
		"./confirm.js": {
			"default": "./lib/confirm.js",
			"types": "./lib/confirm.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vdegenne/material-3-prompt-dialog.git"
	},
	"author": {
		"name": "Valentin Degenne",
		"url": "https://github.com/vdegenne"
	},
	"scripts": {
		"dev": "rm -rf node_modules/.vite && vite dev/ --host",
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@material/web": "^2.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"lit-html": "^3.3.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"wireit": "^0.14.12"
	},
	"peerDependencies": {
		"@material/web": "2.4.0",
		"lit-html": "^3.0.0"
	},
	"files": [
		"./lib",
		"./screenshot.png"
	]
}
